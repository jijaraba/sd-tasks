# SD Tasks - Environment Configuration (Development)
# This file contains environment variables for the Ionic frontend application

# API Configuration
VITE_API_BASE_URL=https://sd-tasks-backend.onrender.com/api
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME=SD Tasks
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Task Management Application with Asana-inspired design

# Authentication Configuration
VITE_AUTH_TOKEN_KEY=sd_tasks_token
VITE_AUTH_USER_KEY=sd_tasks_user

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_ENABLE_ANALYTICS=false

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=false
VITE_DEFAULT_LANGUAGE=en

# Storage Configuration
VITE_STORAGE_PREFIX=sd_tasks_
VITE_CACHE_DURATION=3600000

# Network Configuration
VITE_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000
