# SD Tasks - Staging Environment Configuration
# This file contains staging environment variables

# API Configuration
VITE_API_BASE_URL=https://sd-tasks-backend.onrender.com/api
VITE_API_TIMEOUT=12000

# Application Configuration
VITE_APP_NAME=SD Tasks (Staging)
VITE_APP_VERSION=1.0.0-staging
VITE_APP_DESCRIPTION=Task Management Application - Staging Environment

# Authentication Configuration
VITE_AUTH_TOKEN_KEY=sd_tasks_staging_token
VITE_AUTH_USER_KEY=sd_tasks_staging_user

# Staging Configuration
VITE_DEV_MODE=false
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=warn

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_ENABLE_ANALYTICS=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=en

# Storage Configuration
VITE_STORAGE_PREFIX=sd_tasks_staging_
VITE_CACHE_DURATION=1800000

# Network Configuration
VITE_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1500
