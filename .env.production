# SD Tasks - Production Environment Configuration
# This file contains production environment variables

# API Configuration
VITE_API_BASE_URL=https://your-api-domain.com/api
VITE_API_TIMEOUT=15000

# Application Configuration
VITE_APP_NAME=SD Tasks
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Task Management Application

# Authentication Configuration
VITE_AUTH_TOKEN_KEY=sd_tasks_token
VITE_AUTH_USER_KEY=sd_tasks_user

# Production Configuration
VITE_DEV_MODE=false
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_DEFAULT_LANGUAGE=en

# Storage Configuration
VITE_STORAGE_PREFIX=sd_tasks_
VITE_CACHE_DURATION=7200000

# Network Configuration
VITE_RETRY_ATTEMPTS=5
VITE_RETRY_DELAY=2000
